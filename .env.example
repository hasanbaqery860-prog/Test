# Zitadel Configuration
ZITADEL_DOMAIN=your-zitadel-domain.com
ZITADEL_TOKEN=your-admin-api-token
SMS_WEBHOOK_URL=https://your-webhook-url.com/send

# Webhook Configuration
WEBHOOK_SECRET=your-secure-webhook-secret
PORT=5000
DEBUG=false

# SMS Provider Selection (twilio, messagebird, vonage, custom)
SMS_PROVIDER=twilio

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# MessageBird Configuration
MESSAGEBIRD_ACCESS_KEY=your-messagebird-access-key
MESSAGEBIRD_FROM=YourBrand

# Vonage Configuration
VONAGE_API_KEY=your-vonage-api-key
VONAGE_API_SECRET=your-vonage-api-secret
VONAGE_FROM=YourBrand

# Custom Provider Configuration
CUSTOM_SMS_ENDPOINT=https://api.your-provider.com/send
CUSTOM_SMS_API_KEY=your-custom-api-key