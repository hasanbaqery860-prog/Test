# Custom JavaScript to force immediate SSO redirect
AUTHN_CUSTOM_JS = '''
// Force immediate redirect to SSO
(function() {
    if (window.location.pathname.includes('/authn/') || window.location.pathname.includes('/login')) {
        // Check if we're not already redirecting
        if (!window.location.href.includes('/auth/login/oidc/')) {
            window.location.href = '/auth/login/oidc/';
        }
    }
})();
'''